{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Apocalypse Field Node Source",
  "type": "object",
  "required": [
    "source_id",
    "title",
    "publisher",
    "type",
    "url",
    "publication_date",
    "version",
    "local_snapshot_path"
  ],
  "properties": {
    "source_id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9-]{2,80}$" },
    "title": { "type": "string", "minLength": 3 },
    "publisher": { "type": "string", "minLength": 2 },
    "type": {
      "type": "string",
      "enum": ["gov", "academic", "official_manual", "peer_reviewed"]
    },
    "url": { "type": "string", "format": "uri" },
    "publication_date": { "type": "string" },
    "version": { "type": "string" },
    "license": { "type": "string" },
    "local_snapshot_path": { "type": "string" },
    "sha256": { "type": "string" },
    "notes": { "type": "string" }
  },
  "additionalProperties": true
}
