{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Apocalypse Field Node Entry",
  "type": "object",
  "required": [
    "id",
    "title",
    "category",
    "subtopic",
    "tags",
    "region_relevance",
    "summary",
    "steps",
    "warnings",
    "related_entries",
    "sources",
    "last_verified",
    "confidence"
  ],
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9-]{2,80}$" },
    "title": { "type": "string", "minLength": 3 },
    "category": {
      "type": "string",
      "enum": [
        "L1_immediate_survival",
        "L2_food_biology",
        "L3_materials_elements",
        "L4_tools_rebuilding",
        "L5_civilization_memory"
      ]
    },
    "subtopic": { "type": "string", "minLength": 2 },
    "tags": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "region_relevance": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "summary": { "type": "string", "minLength": 20 },
    "steps": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "warnings": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "related_entries": { "type": "array", "items": { "type": "string" } },
    "sources": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "last_verified": { "type": "string", "format": "date" },
    "confidence": { "type": "string", "enum": ["high", "medium", "low"] },
    "offline_assets": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": true
}
